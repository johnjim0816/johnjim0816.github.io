name: Deploy Hugo site to GitHub Pages

on:
  push:
    branches: [ main ]          # 如果你的默认分支不是 main，改成你的分支名
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          submodules: true      # 主题用 submodule 的话必须 true；用 Hugo Modules 也没坏处
          fetch-depth: 0

      - name: Setup Hugo
        uses: peaceiris/actions-hugo@v3
        with:
          hugo-version: '0.151.0'   # 用你本地确认可用的版本
          extended: true            # 常见主题需要 extended（SCSS）

      # 如需 Tailwind/PostCSS/ESBuild，解除下面注释
      # - name: Setup Node
      #   uses: actions/setup-node@v4
      #   with:
      #     node-version: 20
      # - name: Build frontend
      #   run: npm ci && npm run build

      - name: Build Hugo
        env:
          HUGO_ENV: production
        run: hugo --gc --minify

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./public

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
